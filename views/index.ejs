
<%- include('partials/header.ejs') %>

<body>

    <% if (locals.data){  %>
        
        <div class=" p-4 align-content-center justify-content-center rounded-3 min-vh-100" style="background-color: cornflowerblue;">
            
            <div class="row py-5 mx-auto w-50 align-content-center justify-content-center justify-content-evenly rounded-5 bg-light">
                <div class="mb-5 text-center">
                    <form class="" action="/" method="post">
                        <input class="form-control-lg rounded-5"  type="text" name="city" placeholder="Enter your City" required>
                        <button class="btn btn-dark btn-lg rounded-circle m-2" type="submit">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search"
                                viewBox="0 0 16 16">
                                <path
                                    d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                            </svg>
                        </button>
                        
                        </form>
                </div>
                    <div class="col-4 p-3 align-content-center">
                        <h1 class="display-4 fw-bold lh-1 text-body-emphasis"><%= data.weather[0].description %></h1>
                    </div>

                    <div class="col-4 p-3"> 
                        <img class="rounded-lg-3" src="/images/sunny.png" width="250">
                    </div>

                    <div class="d-flex justify-content-evenly align-content-center">
                        <div>
                            <p class="fs-1">25</p>
                        </div>
                        <div>
                            <p class="fs-1">5km/h</p>
                        </div>
                        
                    </div>

                    <div class="text-center fs-2 my-3">You could go with a sweater!
                    </div>
                    <div class="text-center">
                        <button type="button" class="btn btn-dark rounded-5 btn-lg px-4 me-md-2 fw-bold my-3">Try another
                        </button> 
                    </div>
        
                </div>

        </div>

        <%} else {%>
            <div class="align-content-center justify-content-center min-vh-100" style="background-color: cornflowerblue;">
            
                <div class="row mx-auto w-50 rounded-pill bg-light">

                    <div class="text-center py-5">

                        <form class="" action="/" method="post">
                            <input class="form-control-lg rounded-5 mx-5" type="text" name="city" placeholder="Enter your City"
                                required>
                            <button class="btn btn-dark btn-lg rounded-circle" type="submit">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-search" viewBox="0 0 16 16">
                                    <path
                                        d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                                </svg>
                            </button>
                        </form>

                    </div>
            
                </div>
            
            </div>
            
    <%}%>

    


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" integrity="sha384-ndDqU0Gzau9qJ1lfW4pNLlhNTkCfHzAVBReH9diLvGRem5+R9g2FzA8ZGN954O5Q" crossorigin="anonymous"></script>

</body>
</html>


